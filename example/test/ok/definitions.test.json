{
    "$schema": "../../../schema/testcase.schema.json",
    "target": {
        "start": {
            "label": "control"
        }
    },
    "definitions": {
        "primitives": {
            "value": {
                "AXY_INIT_VALUE": 100,
                "MEM_PAD1_A_ON": 1,
                "MEM_PAD1_A_OFF": 0,
                "MEM_VECTOR_INIT_VALUE": 0
            }
        },
        "templates": {
            "setup": {
                "AXY_INIT": {
                    "register": {
                        "A": {
                            "value": "@AXY_INIT_VALUE"
                        },
                        "X": {
                            "value": "@AXY_INIT_VALUE"
                        },
                        "Y": {
                            "value": "@AXY_INIT_VALUE"
                        }
                    }
                },
                "P_ALL_FALSE": {
                    "register": {
                        "P": {
                            "Carry": {
                                "value": false
                            },
                            "Decimal": {
                                "value": false
                            },
                            "InterruptDisable": {
                                "value": false
                            },
                            "Negative": {
                                "value": false
                            },
                            "Overflow": {
                                "value": false
                            },
                            "Zero": {
                                "value": false
                            }
                        }
                    }
                },
                "P_CARRY_TRUE": {
                    "register": {
                        "P": {
                            "Carry": {
                                "value": true
                            }
                        }
                    }
                },
                "P_CARRY_FALSE": {
                    "register": {
                        "P": {
                            "Carry": {
                                "value": false
                            }
                        }
                    }
                },
                "MEM_PAD1_INPUT_A_OFF_ON_OFF": {
                    "memory": [
                        {
                            "label": "APU_PAD1",
                            "sequence": [
                                "@MEM_PAD1_A_OFF",
                                "@MEM_PAD1_A_ON",
                                "@MEM_PAD1_A_OFF"
                            ]
                        }
                    ]
                },
                "MEM_VECTOR_INIT": {
                    "memory": [
                        {
                            "label": "vector_addr",
                            "value": "@MEM_VECTOR_INIT_VALUE"
                        }
                    ]
                },
                "NMI_CALL_SAVE_ID": {
                    "interrupt": [
                        {
                            "type": "NMI",
                            "entryPoint": {
                                "label": "save_id"
                            }
                        }
                    ]
                },
                "MOCK_READ_JOYPAD_PUSH_A_KEY": {
                    "mockedProc": [
                        {
                            "entryPoint": {
                                "label": "read_joypad_a_key"
                            },
                            "action": "rts",
                            "setValue": [
                                {
                                    "template": [
                                        "@P_CARRY_TRUE"
                                    ]
                                },
                                {
                                    "template": [
                                        "@P_CARRY_FALSE"
                                    ]
                                }
                            ]
                        }
                    ]
                }
            },
            "expected": {
                "X_STAY_INITIAL": {
                    "register": {
                        "X": {
                            "value": {
                                "eq": "@AXY_INIT_VALUE"
                            }
                        }
                    }
                },
                "Y_STAY_INITIAL": {
                    "register": {
                        "Y": {
                            "value": {
                                "eq": "@AXY_INIT_VALUE"
                            }
                        }
                    }
                },
                "A_SUCCESSFULLY_ADDED": {
                    "register": {
                        "A": {
                            "value": {
                                "eq": 4
                            }
                        }
                    }
                },
                "P_EXPECTED_ALL_FALSE_EXCEPT_N": {
                    "register": {
                        "P": {
                            "Carry": {
                                "value": {
                                    "eq": false
                                }
                            },
                            "Decimal": {
                                "value": {
                                    "eq": false
                                }
                            },
                            "InterruptDisable": {
                                "value": {
                                    "eq": false
                                }
                            },
                            "Negative": {
                                "value": {
                                    "eq": true
                                }
                            },
                            "Overflow": {
                                "value": {
                                    "eq": false
                                }
                            },
                            "Zero": {
                                "value": {
                                    "eq": false
                                }
                            }
                        }
                    }
                },
                "MEM_UPDATED_VECTOR_IS_4": {
                    "memory": [
                        {
                            "label": "vector_addr",
                            "value": {
                                "eq": 4
                            }
                        }
                    ]
                },
                "MEM_NMI_LOCK_EXECUTED": {
                    "memory": [
                        {
                            "label": "nmi_lock",
                            "readCount": {
                                "gt": 0
                            }
                        }
                    ]
                }
            }
        }
    },
    "cases": {
        "NMI interrupt (definitions)": {
            "setup": {
                "template": [
                    "@MEM_PAD1_INPUT_A_OFF_ON_OFF",
                    "@MEM_VECTOR_INIT",
                    "@NMI_CALL_SAVE_ID"
                ]
            },
            "expected": {
                "template": [
                    "@MEM_UPDATED_VECTOR_IS_4",
                    "@MEM_NMI_LOCK_EXECUTED"
                ]
            }
        },
        "call mocked proc read_joypad_a_key (definitions)": {
            "setup": {
                "template": [
                    "@P_ALL_FALSE",
                    "@MOCK_READ_JOYPAD_PUSH_A_KEY"
                ]
            },
            "expected": {
                "template": [
                    "@P_EXPECTED_ALL_FALSE_EXCEPT_N"
                ],
                "timeout": {
                    "eq": false
                }
            }
        },
        "accessed only A": {
            "setup": {
                "template": [
                    "@AXY_INIT",
                    "@MEM_PAD1_INPUT_A_OFF_ON_OFF",
                    "@MEM_VECTOR_INIT"
                ]
            },
            "expected": {
                "template": [
                    "@A_SUCCESSFULLY_ADDED",
                    "@X_STAY_INITIAL",
                    "@Y_STAY_INITIAL"
                ]
            }
        }
    }
}