{
    "$schema": "http://json-schema.org/schema",
    "type": "object",
    "required": [
        "target",
        "cases"
    ],
    "additionalProperties": false,
    "properties": {
        "$schema": {
            "type": "string"
        },
        "target": {
            "title": "Test target",
            "description": "Test target specifies the address to be set in the PC register at the start of the test.",
            "$ref": "#/definitions/address"
        },
        "cases": {
            "title": "Test cases",
            "description": "Test cases specify, for each test, the setup conditions and the expected conditions.",
            "type": "object",
            "minItems": 1,
            "patternProperties": {
                "additionalProperties": false,
                "^.*$": {
                    "title": "Test ID",
                    "description": "Test ID can be any string that uniquely identifies it in the file.",
                    "type": "object",
                    "required": [
                        "setup",
                        "expected"
                    ],
                    "additionalProperties": false,
                    "properties": {
                        "skip": {
                            "type": "boolean"
                        },
                        "setup": {
                            "title": "Setup condition",
                            "description": "Setup condition specifies the initial settings of the registers and memory at the start of the test.",
                            "allOf": [
                                {
                                    "$ref": "#/definitions/conditions"
                                }
                            ],
                            "properties": {
                                "A": {},
                                "X": {},
                                "Y": {},
                                "Status": {},
                                "memory": {
                                    "items": {
                                        "properties": {
                                            "readCount": {
                                                "type": "null"
                                            },
                                            "writeCount": {
                                                "type": "null"
                                            }
                                        }
                                    }
                                }
                            }
                        },
                        "expected": {
                            "title": "Expected condition",
                            "description": "Expected Condition specifies the result of the registers and memory at the end of the test.",
                            "$ref": "#/definitions/conditions"
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "address": {
            "type": "object",
            "oneOf": [
                {
                    "required": [
                        "address"
                    ]
                },
                {
                    "required": [
                        "label"
                    ]
                }
            ],
            "properties": {
                "address": {
                    "title": "Address",
                    "description": "Address is expressed as a hexadecimal address value.",
                    "type": "string",
                    "pattern": "^\\$[0-9A-F]{1,4}$"
                },
                "label": {
                    "title": "Label",
                    "description": "Label specifies the symbol name written in the symbol file.",
                    "type": "string"
                },
                "offset": {
                    "title": "Offset",
                    "description": "The offset specifies the position relative to the point of the address indicated by the Label.",
                    "$ref": "#/definitions/number"
                }
            },
            "dependencies": {
                "address": {
                    "properties": {
                        "offset": {
                            "type": "null"
                        },
                        "label": {
                            "type": "null"
                        }
                    }
                },
                "label": {
                    "properties": {
                        "address": {
                            "type": "null"
                        }
                    }
                }
            }
        },
        "number": {
            "oneOf": [
                {
                    "type": "integer",
                    "minimum": -128,
                    "maximum": 255
                },
                {
                    "type": "string",
                    "pattern": "^\\$[0-9A-F]{1,2}$"
                },
                {
                    "type": "string",
                    "pattern": "^%[01]{1,8}$"
                }
            ]
        },
        "conditions": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "A": {
                    "title": "A Register",
                    "$ref": "#/definitions/number"
                },
                "X": {
                    "title": "X Register",
                    "$ref": "#/definitions/number"
                },
                "Y": {
                    "title": "Y Register",
                    "$ref": "#/definitions/number"
                },
                "Status": {
                    "title": "Status Register",
                    "type": "object",
                    "additionalProperties": false,
                    "properties": {
                        "Negative": {
                            "title": "Negative flag",
                            "type": "boolean"
                        },
                        "Overflow": {
                            "title": "Overflow flag",
                            "type": "boolean"
                        },
                        "Break": {
                            "title": "Break flag",
                            "type": "boolean"
                        },
                        "Decimal": {
                            "title": "Decimal flag",
                            "type": "boolean"
                        },
                        "Interrupt": {
                            "title": "Interrupt flag",
                            "type": "boolean"
                        },
                        "Zero": {
                            "title": "Zero flag",
                            "type": "boolean"
                        },
                        "Carry": {
                            "title": "Carry flag",
                            "type": "boolean"
                        }
                    }
                },
                "memory": {
                    "title": "Memory",
                    "type": "array",
                    "minItems": 1,
                    "items": {
                        "type": "object",
                        "allOf": [
                            {
                                "$ref": "#/definitions/address"
                            }
                        ],
                        "anyOf": [
                            {
                                "required": [
                                    "value"
                                ]
                            },
                            {
                                "required": [
                                    "sequence"
                                ]
                            },
                            {
                                "required": [
                                    "readCount"
                                ]
                            },
                            {
                                "required": [
                                    "writeCount"
                                ]
                            }
                        ],
                        "additionalProperties": false,
                        "properties": {
                            "address": {},
                            "label": {},
                            "offset": {},
                            "value": {
                                "title": "Memory value",
                                "description": "Memory value can be either the single value at the specified address or the values given in an array starting from the address.",
                                "oneOf": [
                                    {
                                        "$ref": "#/definitions/number"
                                    },
                                    {
                                        "type": "array",
                                        "minItems": 1,
                                        "items": {
                                            "$ref": "#/definitions/number"
                                        }
                                    }
                                ]
                            },
                            "sequence": {
                                "title": "Memory sequence",
                                "description": "Memory sequence can be either the value array in the order of processing at the specified address, or the value arrays given in the two-dimensioned array starting from address.",
                                "type": "array",
                                "minItems": 1,
                                "oneOf": [
                                    {
                                        "items": {
                                            "$ref": "#/definitions/number"
                                        }
                                    },
                                    {
                                        "items": {
                                            "type": "array",
                                            "minItems": 1,
                                            "items": {
                                                "$ref": "#/definitions/number"
                                            }
                                        }
                                    }
                                ]
                            },
                            "readCount": {
                                "title": "Read count",
                                "description": "Read count specifies the number of times the read instruction(LDA, CMP, ...) for the specified address is executed.",
                                "oneOf": [
                                    {
                                        "type": "number",
                                        "minimum": 0
                                    },
                                    {
                                        "type": "array",
                                        "minItems": 1,
                                        "items": {
                                            "type": "number",
                                            "minimum": 0
                                        }
                                    }
                                ]
                            },
                            "writeCount": {
                                "title": "Write count",
                                "description": "Write count specifies the number of times the write instruction(STA, INC, ..) for the specified address is executed.",
                                "oneOf": [
                                    {
                                        "type": "number",
                                        "minimum": 0
                                    },
                                    {
                                        "type": "array",
                                        "minItems": 1,
                                        "items": {
                                            "type": "number",
                                            "minimum": 0
                                        }
                                    }
                                ]
                            }
                        },
                        "dependencies": {
                            "value": {
                                "properties": {
                                    "sequence": {
                                        "type": "null"
                                    }
                                }
                            },
                            "sequence": {
                                "properties": {
                                    "value": {
                                        "type": "null"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}