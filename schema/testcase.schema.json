{
    "$schema": "http://json-schema.org/schema",
    "type": "object",
    "required": [
        "target",
        "cases"
    ],
    "additionalProperties": false,
    "properties": {
        "$schema": {
            "type": "string"
        },
        "target": {
            "description": "Test target",
            "$ref": "#/definitions/address"
        },
        "cases": {
            "type": "array",
            "minItems": 1,
            "items": {
                "type": "object",
                "required": [
                    "name",
                    "setup",
                    "expected"
                ],
                "additionalProperties": false,
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "skip": {
                        "type": "boolean"
                    },
                    "setup": {
                        "$ref": "#/definitions/conditions",
                        "properties": {
                            "memory": {
                                "items": {
                                    "properties": {
                                        "readCount": {
                                            "type": "null"
                                        },
                                        "readCounts": {
                                            "type": "null"
                                        },
                                        "writeCount": {
                                            "type": "null"
                                        },
                                        "writeCounts": {
                                            "type": "null"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "expected": {
                        "$ref": "#/definitions/conditions"
                    }
                }
            }
        }
    },
    "definitions": {
        "address": {
            "type": "object",
            "oneOf": [
                {
                    "required": [
                        "address"
                    ]
                },
                {
                    "required": [
                        "label"
                    ]
                }
            ],
            "properties": {
                "address": {
                    "type": "string",
                    "pattern": "^\\$[0-9A-F]{1,4}$"
                },
                "label": {
                    "type": "string"
                },
                "offset": {
                    "$ref": "#/definitions/number"
                }
            },
            "dependencies": {
                "address": {
                    "properties": {
                        "offset": {
                            "type": "null"
                        },
                        "label": {
                            "type": "null"
                        }
                    }
                },
                "label": {
                    "properties": {
                        "address": {
                            "type": "null"
                        }
                    }
                }
            }
        },
        "number": {
            "oneOf": [
                {
                    "type": "integer",
                    "minimum": -128,
                    "maximum": 255
                },
                {
                    "type": "string",
                    "pattern": "^\\$[0-9A-F]{1,2}$"
                },
                {
                    "type": "string",
                    "pattern": "^%[01]{1,8}$"
                }
            ]
        },
        "conditions": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "A": {
                    "$ref": "#/definitions/number"
                },
                "X": {
                    "$ref": "#/definitions/number"
                },
                "Y": {
                    "$ref": "#/definitions/number"
                },
                "Status": {
                    "type": "object",
                    "additionalProperties": false,
                    "properties": {
                        "Negative": {
                            "type": "boolean"
                        },
                        "Overflow": {
                            "type": "boolean"
                        },
                        "Break": {
                            "type": "boolean"
                        },
                        "Decimal": {
                            "type": "boolean"
                        },
                        "Interrupt": {
                            "type": "boolean"
                        },
                        "Zero": {
                            "type": "boolean"
                        },
                        "Carry": {
                            "type": "boolean"
                        }
                    }
                },
                "memory": {
                    "type": "array",
                    "minItems": 1,
                    "items": {
                        "type": "object",
                        "allOf": [
                            {
                                "$ref": "#/definitions/address"
                            }
                        ],
                        "anyOf": [
                            {
                                "required": [
                                    "value"
                                ]
                            },
                            {
                                "required": [
                                    "values"
                                ]
                            },
                            {
                                "required": [
                                    "readCount"
                                ]
                            },
                            {
                                "required": [
                                    "readCounts"
                                ]
                            },
                            {
                                "required": [
                                    "writeCount"
                                ]
                            },
                            {
                                "required": [
                                    "writeCounts"
                                ]
                            }
                        ],
                        "additionalProperties": false,
                        "properties": {
                            "address": {},
                            "label": {},
                            "offset": {},
                            "value": {
                                "oneOf": [
                                    {
                                        "$ref": "#/definitions/number"
                                    },
                                    {
                                        "type": "array",
                                        "minItems": 1,
                                        "items": {
                                            "$ref": "#/definitions/number"
                                        }
                                    }
                                ]
                            },
                            "values": {
                                "type": "array",
                                "minItems": 1,
                                "items": {
                                    "oneOf": [
                                        {
                                            "$ref": "#/definitions/number"
                                        },
                                        {
                                            "type": "array",
                                            "minItems": 1,
                                            "items": {
                                                "$ref": "#/definitions/number"
                                            }
                                        }
                                    ]
                                }
                            },
                            "readCount": {
                                "type": "number",
                                "minimum": 0
                            },
                            "readCounts": {
                                "type": "array",
                                "minItems": 1,
                                "items": {
                                    "type": "number",
                                    "minimum": 0
                                }
                            },
                            "writeCount": {
                                "type": "number",
                                "minimum": 0
                            },
                            "writeCounts": {
                                "type": "array",
                                "minItems": 1,
                                "items": {
                                    "type": "number",
                                    "minimum": 0
                                }
                            }
                        },
                        "dependencies": {
                            "value": {
                                "properties": {
                                    "values": {
                                        "type": "null"
                                    }
                                }
                            },
                            "values": {
                                "properties": {
                                    "value": {
                                        "type": "null"
                                    }
                                }
                            },
                            "readCount": {
                                "properties": {
                                    "readCounts": {
                                        "type": "null"
                                    }
                                }
                            },
                            "readCounts": {
                                "properties": {
                                    "readCount": {
                                        "type": "null"
                                    }
                                }
                            },
                            "writeCount": {
                                "properties": {
                                    "writeCounts": {
                                        "type": "null"
                                    }
                                }
                            },
                            "writeCounts": {
                                "properties": {
                                    "writeCount": {
                                        "type": "null"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}